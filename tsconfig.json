{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": false,
      "baseUrl": ".",
      "outDir": "build",                          
      "rootDir": "./src",
      "resolveJsonModule": true,
      "paths": {
        "@": ["./src"],
      }
  },
  "include": [
      "./src/**/*",
      "./tests/**/*"
  ]
}